{
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.5.3/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@v0.11.5/"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "cms": "deno task lume cms"
  },
  "compilerOptions": {
    "strict": true,
    "types": [
      "lume/types.ts"
    ]
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  }
}
